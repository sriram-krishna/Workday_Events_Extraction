# Workday API credentials
API_BASE_URL=https://api.workdayspend.com/v1
API_EVENTS_ENDPOINT=/events
API_KEY=your_api_key_here
USER_TOKEN=your_user_token_here
USER_EMAIL=your_email@example.com

# Workday UI URLs
WD_LOGIN_URL=https://us.workdayspend.com/auth
WD_HOME_URL=https://us.workdayspend.com/rfps

# Workday navigation paths (relative to event URL)
WD_ATTACHMENTS_URL=/attachments
WD_BID_EXPORT_URL=/bid-export
WD_DASHBOARD_URL=/dashboard

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_CONTAINER_NAME=your-container-name
AZURE_BLOB_BASE_URL=https://youraccount.blob.core.windows.net
AZURE_BLOB_PREFIX=your/path/prefix

# Local paths and runtime
TEMP_DIR=./temp_downloads
CSV_FILE=downloaded_files.csv
PROGRESS_FILE=progress.json

# Timeouts (in milliseconds)
DOWNLOAD_TIMEOUT=30000
LOGIN_TIMEOUT=180000

# Workday API Settings
WD_API_TIMEOUT=30
WD_API_RETRY_SLEEP=1
WD_API_MAX_RETRIES=3
WD_API_PAGE_SIZE=100
